@model FUNewsManagementSystem.Models.ViewModel.IndexPageVM
@{
    ViewData["Title"] = "Article List (Domain Model)";
}

<h1>@ViewData["Title"]</h1>

<button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#createModal">
    Create New Article
</button>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Publish Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>@article.NewsArticleId</td>
                <td>@article.NewsTitle</td>
                <td>@article.NewsContent</td>
                <td>@article.Category?.CategoryName</td>
                <td>@string.Join(", ", article.Tags?.Select(tag => tag.TagName) ?? Enumerable.Empty<string>())</td>
                <td>
                    @(article.CreatedDate.HasValue
                        ? article.CreatedDate.Value.ToString("dd/MM/yyyy")
                        : "")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@article.NewsArticleId" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@article.NewsArticleId" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this article?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body" id="modalBody">
                <partial name="_CreatePartial" model="Model.CreateVM" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#createModal').on('hidden.bs.modal', function () {
                $(this).find('form')[0].reset();
                $(this).find('.text-danger').text('');
            });

            $('#createForm').submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '@Url.Action("Create", "NewArticle")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            $('#createModal').modal('hide');
                            window.location.reload();
                        } else {
                            $('#modalBody').html(response);
                        }
                    }
                });
            });
        });
    </script>
}